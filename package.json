{
  "name": "fosscode",
  "version": "0.0.28",
  "description": "Lightweight CLI application for code agent interactions with LLMs",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "fosscode": "dist/index.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/yoga.wasm",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --external \"@anthropic-ai/sdk\" --external \"openai\" --external \"chalk\" --external \"ink\" --external \"react\" --external \"yoga-wasm-web\" && cp node_modules/yoga-wasm-web/dist/yoga.wasm dist/",
    "build:exe": "bun build src/binary.ts --target node --compile --production --outfile dist/fosscode",
    "build:docker": "docker build -t fosscode .",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts --quiet",
    "format": "prettier --write src/**/*.ts",
    "test": "npx jest --testPathIgnorePatterns=\"e2e\"",
    "test:all": "npx jest",
    "clean": "rm -rf dist",
    "start": "bun run src/index.ts",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major",
    "release": "./scripts/release.sh patch",
    "publish": "./scripts/publish.sh",
    "perf": "node scripts/performance-test.js",
    "performance-test": "node scripts/performance-test.js"
  },
  "keywords": [
    "cli",
    "llm",
    "ai",
    "code-agent",
    "typescript",
    "terminal"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@types/jest": "30.0.0",
    "@types/node": "20.19.11",
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.8",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.57.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "4.6.2",
    "ink-testing-library": "4.0.0",
    "jest": "30.1.1",
    "jest-environment-jsdom": "30.1.1",
    "prettier": "3.6.2",
    "ts-jest": "29.4.1",
    "typescript": "5.9.2"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/setup.ts"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/__tests__/**/*.test.tsx",
      "**/?(*.)+(spec|test).ts",
      "**/?(*.)+(spec|test).tsx"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ],
      "^.+\\.tsx$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(cheerio|@modelcontextprotocol|chalk|ink|react|yoga-wasm-web)/)"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "^cheerio$": "<rootDir>/src/__mocks__/cheerio.js"
    },
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ]
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.60.0",
    "@modelcontextprotocol/sdk": "1.17.4",
    "@playwright/mcp": "0.0.35",
    "chalk": "5.6.0",
    "cheerio": "1.1.2",
    "commander": "11.1.0",
    "ink": "4.4.1",
    "ink-spinner": "5.0.0",
    "ink-text-input": "5.0.1",
    "openai": "4.104.0",
    "react": "18.3.1",
    "react-devtools-core": "6.1.5",
    "yoga-wasm-web": "0.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "preferUnplugged": true
}
